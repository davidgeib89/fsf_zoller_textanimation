<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <sheet1>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Title</sheetTitle>
                    <sheetDescription>Descr.</sheetDescription>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.headline>
                        <TCEforms>
                            <label>Überschrift</label>
                            <config>
                                <type>input</type>
                                <eval>trim</eval>
                                <size>30</size>
                            </config>
                        </TCEforms>
                    </settings.headline>
                    <settings.text>
                    <TCEforms>
                        <label>Unterüberschrift</label>
                        <config>
                            <type>text</type>
                            <rows>5</rows>
                            <cols>30</cols>
                            <eval>trim</eval>
                            <max>100</max>
                            <enableRichtext>1</enableRichtext>
                            <richtextConfiguration>default</richtextConfiguration>
                        </config>
                    </TCEforms>
                    </settings.text>
                    <settings.buttontext1>
                        <TCEforms>
                            <label>Buttontext</label>
                            <config>
                                <type>input</type>
                                <eval>trim</eval>
                                <size>30</size>
                            </config>
                        </TCEforms>
                    </settings.buttontext1>
                    <settings.url1>
                        <TCEforms>
                            <label>Buttonlink</label>
                            <config>
                                <type>input</type>
                                <size>50</size>
                                <max>256</max>
                                <eval>trim</eval>
                                <renderType>inputLink</renderType>
                                <softref>typolink</softref>
                            </config>
                        </TCEforms>
                    </settings.url1>
                    <settings.img1>
						<TCEforms>
							<label>Hintergrund Bild</label>
							<config>										
								<type>group</type>
								<internal_type>file</internal_type>
								<allowed>gif, jpg,jpeg,png,csv</allowed>
								<max_size>10000</max_size>
								<uploadfolder>uploads/tx_fsfzollertextanimation</uploadfolder>
								<maxitems>1</maxitems>
								<size>1</size>
								<selectedliststyle>Width:180px</selectedliststyle>
							</config>
						</TCEforms>
					</settings.img1>
                    <settings.img2>
						<TCEforms>
							<label>Bild rechts</label>
							<config>										
								<type>group</type>
								<internal_type>file</internal_type>
								<allowed>gif, jpg,jpeg,png,csv</allowed>
								<max_size>10000</max_size>
								<uploadfolder>uploads/tx_fsfzollertextanimation</uploadfolder>
								<maxitems>1</maxitems>
								<size>1</size>
								<selectedliststyle>Width:180px</selectedliststyle>
							</config>
						</TCEforms>
					</settings.img2>
                    <settings.animation>
						<TCEforms>
							<label>HTML5 Animation</label>
                            <config>
                            <type>text</type>
                            <cols>24</cols>
                            <rows>3</rows>
                            </config>
						</TCEforms>
					</settings.animation>
                </el>
            </ROOT>
        </sheet1>
    </sheets>
</T3DataStructure>
